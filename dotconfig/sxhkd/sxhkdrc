# make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'

# Run rofi 
super + d
	~/.config/rofi/launchers/launcher.sh	

# Run apps
super + b
	brave

super + e
	thunar

super + v 
	code

super + shift + b
bitwarden-desktop

super + alt + b
	blueman-manager



# Power key
super + shift + x
	~/.config/rofi/powermenu/powermenu.sh

super + shift + l 
	 betterlockscreen -l




# Brightness control
XF86MonBrightnessUp
	brightnessctl set +5%

XF86MonBrightnessDown
	brightnessctl set 5%-

alt + shift + k
	brightnessctl set +5%

alt + shift + j
	brightnessctl set 5%-

# Audio control
XF86AudioMute
	pamixer -t # toggle audio mute

XF86AudioMicMute
	 pamixer --source 54 -t # toggle microphone mute

XF86AudioLowerVolume
	pamixer -d 5 # decrease volume

XF86AudioRaiseVolume
	pamixer -i 5 # increase volume

alt + m
	pamixer -t # toggle audio mute

alt + shift + m 
	 pamixer --source 54 -t

alt + j
	pamixer -d 5 # decrease volume

alt + k
	pamixer -i 5 # increase volume

XF86AudioPlay
	playerctl play-pause

XF86AudioPause
	playerctl play-pause

XF86AudioNext
	playerctl next

XF86AudioPrev
	playerctl previous

alt + p
	playerctl play-pause

alt + l
	playerctl next

alt + h
	playerctl previous

