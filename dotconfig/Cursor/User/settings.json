{
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Solarized Dark",
  "workbench.startupEditor": "none",
  "window.commandCenter": true,
  "workbench.statusBar.visible": false,

  "telemetry.telemetryLevel": "off",
  "update.mode": "none",

  "editor.smoothScrolling": false,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.cursorBlinking": "solid",
  "editor.suggest.showIcons": false,
  "editor.parameterHints.enabled": false,
  "editor.quickSuggestionsDelay": 120,
  "editor.inlineSuggest.enabled": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.suggestSelection": "first",

  "files.watcherExclude": {
    "**/.git/**": true,
    "**/.turbo/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.next/**": true,
    "**/.cache/**": true
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.turbo": true
  },
  "search.useIgnoreFilesByDefault": true,
  "search.followSymlinks": false,

  "files.maxMemoryForLargeFilesMB": 64,

  "cursor.experimental.semanticIndex": true,
  "cursor.experimental.semanticSearch": true,
  "cursor.experimental.enableContextualEdits": true,

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },

  "python.analysis.languageServerMode": "light",
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.defaultInterpreterPath": "/usr/bin/python3",

  "tailwindCSS.emmetCompletions": false,
  "tailwindCSS.includeLanguages": {
    "javascript": "javascript",
    "typescript": "typescript",
    "javascriptreact": "javascript",
    "typescriptreact": "typescript"
  },
  "files.associations": {
    "*.css": "postcss",
    "*.pcss": "postcss"
  },

  "graphql.trace.server": "off",

  "yaml.maxItemsComputed": 3000,

  "typescript.tsserver.maxTsServerMemory": 1536,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.tsserver.useSyntaxServer": "never",
  "typescript.tsserver.watchOptions": {
    "watchFile": "priorityPollingInterval",
    "watchDirectory": "dynamicPriorityPolling",
    "fallbackPolling": "dynamicPriorityPolling"
  },
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,

  "path-intellisense.mappings": {},
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,

  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,

  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "redhat.telemetry.enabled": false
}
